<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactoFragment">


    <LinearLayout
        android:id="@+id/contenedorPadre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_geom_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:padding="4sp"
            android:weightSum="6">

            <!--    <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPersonName"
                    android:text="Asunto"
                    android:textStyle="bold" />-->

            <!-- <EditText
                 android:id="@+id/et_asunto_contacto"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_gravity="right"
                 android:layout_weight="4.9"
                 android:background="@color/md_amber_100"
                 android:fontFamily="sans-serif-medium"
                 android:gravity="left" />-->

            <!--Asunto-->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_asunto_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_contact_subject"
                    android:drawableLeft="@drawable/ic_contact_subject"
                    android:drawablePadding="12dp"
                    android:hint="Asunto"
                    android:imeOptions="actionNext"
                    android:minWidth="320dp"
                    android:minHeight="45dp"
                    android:singleLine="true" />
            </android.support.v7.widget.CardView>

            <!--            _email_usuario-->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_remtt_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_menu_mail"
                    android:drawableLeft="@drawable/ic_menu_mail"
                    android:drawablePadding="12dp"
                    android:hint="Su email"
                    android:imeOptions="actionNext"
                    android:minWidth="320dp"
                    android:minHeight="45dp"
                    android:singleLine="true" />
            </android.support.v7.widget.CardView>
            <!--NICK-->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_nick_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:hint="Nick usuario a contactar"
                    android:imeOptions="actionNext"
                    android:minWidth="320dp"
                    android:minHeight="45dp"
                    android:singleLine="true" />
            </android.support.v7.widget.CardView>

            <!--            contenido email-->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/colorTextInputBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_contenido_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_contact_email"
                    android:drawableLeft="@drawable/ic_contact_email"
                    android:drawablePadding="12dp"
                    android:hint="Contenido"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:minWidth="320dp"
                    android:minHeight="45dp"
                    android:singleLine="true" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button_contactar"
                style="@style/Button1"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/enviar_email" />

            <TextView
                android:id="@+id/tv_error_contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="#D67777"
                android:textSize="18sp" />

        </LinearLayout>




    </LinearLayout>


</FrameLayout>

