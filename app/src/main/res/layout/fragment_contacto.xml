<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactoFragment">


    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/contenedorPadre"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="4sp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPersonName"
                    android:text="Asunto"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_asunto_contacto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4.9"
                    android:background="@color/md_amber_100"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contenedorHijoinferior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:padding="4sp"
                android:weightSum="6">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPersonName"
                    android:text="Su Email"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/et_remtt_contacto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4.9"
                    android:background="@color/md_amber_100"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:padding="4sp"
                android:weightSum="6">

                <TextView
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="textPersonName"
                    android:text="Indica nick del usario a contactar"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/et_nick_contacto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4.9"
                    android:background="@color/md_amber_100"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_contenido_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:layout_weight="4.9"
                android:background="@color/md_amber_100"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:padding="4dp" />

            <Button
                android:id="@+id/button_contactar"
                style="@style/Button1"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Enviar" />

        </LinearLayout>


    </ScrollView>

</FrameLayout>

